<div class="container-fluid mt-5 px-5">
    <div class="card shadow rounded-4 border-0">
        <div class="card-body p-4">
            <div class="d-flex justify-content-between align-items-center mb-4 px-3">
                <h2 class="fw-bold text-primary mb-0"> Users List</h2>
            </div>

            <div class="table-responsive" style="overflow-x: auto; max-height: 750px; overflow-y: auto;">
                <table id="tblData" class="table align-middle text-center table-striped table-hover mb-0" style="width:100%;">
                    <thead class="table-primary text-secondary">
                        <tr>
                            <th style="min-width: 150px;">Name</th>
                            <th style="min-width: 350px;">Email</th>
                            <th style="min-width: 120px;">Phone</th>
                            <th style="min-width: 150px;">Company</th>
                            <th style="min-width: 100px;">Role</th>
                            <th style="min-width: 120px;">Action</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
    $(document).ready(function () {
        var dataTable = $('#tblData').DataTable({
            responsive: true,
            "ajax": {
                "url": "/Admin/User/GetAll",
                "dataSrc": "data"
            },
            "columns": [
                { data: 'name', width: "150px" },
                { data: 'email', width: "350px" },
                { data: 'phoneNumber', width: "120px" },
                { data: 'company.name', width: "150px" },
                { data: 'role', width: "100px" },
                {
                    data: 'id',
                    width: "120px",
                    render: function(data, type, row) {
                        // Check if user is locked
                        var isLocked = row.lockoutEnd && new Date(row.lockoutEnd) > new Date();
                        var btnClass = isLocked ? 'btn-success' : 'btn-warning';
                        var btnText = isLocked ? 'Unlock' : 'Lock';

                        return `
                            <div class="d-flex justify-content-center gap-2">
                                <button class="btn ${btnClass} btn-sm rounded-pill" onclick="lockUnlock('${data}')">
                                    ${btnText}
                                </button>
                                <button class="btn btn-info btn-sm rounded-pill" onclick="managePermissions('${data}')">
                                    Permissions
                                </button>
                            </div>
                        `;
                    }
                }
            ]
        });

        window.lockUnlock = function (id) {
            $.ajax({
                url: '/Admin/User/LockUnlock',
                type: 'POST',
                contentType: 'application/json',
                data: JSON.stringify(id),
                success: function (response) {
                    if (response.success) {
                        Swal.fire(
                            'Success!',
                            response.message,
                            'success'
                        );
                        dataTable.ajax.reload(null, false);
                    } else {
                        Swal.fire(
                            'Error!',
                            response.message,
                            'error'
                        );
                    }
                },
                error: function () {
                    Swal.fire(
                        'Error!',
                        'An error occurred while locking/unlocking the user.',
                        'error'
                    );
                }
            });
        };

        window.managePermissions = function (id) {
            // Example: redirect to a permissions page
            window.location.href = '/Admin/User/RoleManagement?userId=' + id;
        };
    });
</script>
