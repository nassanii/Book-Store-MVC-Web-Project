@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}


<style>
    /* Smooth fade-in animation for the card */
    .fade-in-card {
        opacity: 0;
        transform: translateY(20px);
        animation: fadeInUp 0.7s forwards ease-in-out;
    }

    @@keyframes fadeInUp {
        to

    {
        opacity: 1;
        transform: translateY(0);
    }

    }

    /* Staggered fade-in for form controls */
    .fade-input {
        opacity: 0;
        transform: translateY(10px);
        animation: fadeInInput 0.5s forwards ease-in-out;
    }

        .fade-input:nth-child(1) {
            animation-delay: 0.2s;
        }

        .fade-input:nth-child(2) {
            animation-delay: 0.35s;
        }

        .fade-input:nth-child(3) {
            animation-delay: 0.5s;
        }

        .fade-input:nth-child(4) {
            animation-delay: 0.65s;
        }

    @@keyframes fadeInInput {
        to

    {
        opacity: 1;
        transform: translateY(0);
    }

    }

    /* Card hover effect */
    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 30px 60px rgba(0, 0, 0, 0.2);
        transition: all 0.3s ease-in-out;
    }

    /* Input focus effect */
    .form-control:focus, .form-select:focus {
        box-shadow: 0 0 12px rgba(13, 110, 253, 0.5);
        border-color: #0d6efd;
    }

    /* Modern black gradient button */
    .btn-modern {
        background: linear-gradient(90deg, #000000, #434343);
        border: none;
        border-radius: 12px;
        font-size: 1.1rem;
        padding: 0.75rem;
        color: white;
        font-weight: 600;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
        transition: all 0.3s ease-in-out;
    }

        .btn-modern:hover {
            background: linear-gradient(90deg, #111111, #555555);
            transform: scale(1.05);
            box-shadow: 0 6px 25px rgba(0, 0, 0, 0.5);
        }

    /* Container size */
    .big-container {
        max-width: 900px;
    }

    /* Form title style */
    .form-title {
        font-size: 1.5rem;
        font-weight: bold;
        margin-bottom: 1rem;
        text-align: center;
        color: #333;
    }

    /* Reduce spacing above the title */
    .card-body {
        padding-top: 2rem !important;
        padding-bottom: 2rem !important;
    }
</style>

<div class="container py-5 big-container">
    <div class="row justify-content-center">
        <div class="col-lg-10 col-md-11">
            <div class="card shadow-lg border-0 rounded-4 fade-in-card p-2">

                <div class="card-body p-4">
                    <!-- Create Account Title -->
                    @if (User.IsInRole(SD.AdminRole))
                    {
                        <div class="form-title">Create an Account - Admin Portal</div>
                    }
                    else
                    {
                        <div class="form-title">Create an Account</div>
                    }
                    

                    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" novalidate>
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                        <!-- Name & Phone Number -->
                        <div class="row mb-3">
                            <div class="col-md-6 fade-input">
                                <div class="form-floating">
                                    <input asp-for="Input.Name" class="form-control" placeholder="Full Name" />
                                    <label asp-for="Input.Name">Full Name</label>
                                    <span asp-validation-for="Input.Name" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6 fade-input">
                                <div class="form-floating">
                                    <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Phone Number" />
                                    <label asp-for="Input.PhoneNumber">Phone Number</label>
                                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Street Address, City, State -->
                        <div class="row mb-3">
                            <div class="col-md-4 fade-input">
                                <div class="form-floating">
                                    <input asp-for="Input.StreetAddress" class="form-control" placeholder="Street Address" />
                                    <label asp-for="Input.StreetAddress">Street Address</label>
                                    <span asp-validation-for="Input.StreetAddress" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4 fade-input">
                                <div class="form-floating">
                                    <input asp-for="Input.City" class="form-control" placeholder="City" />
                                    <label asp-for="Input.City">City</label>
                                    <span asp-validation-for="Input.City" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4 fade-input">
                                <div class="form-floating">
                                    <input asp-for="Input.State" class="form-control" placeholder="State" />
                                    <label asp-for="Input.State">State</label>
                                    <span asp-validation-for="Input.State" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Postal Code & Email -->
                        <div class="row mb-3">
                            <div class="col-md-6 fade-input">
                                <div class="form-floating">
                                    <input asp-for="Input.PostalCode" class="form-control" placeholder="Postal Code" />
                                    <label asp-for="Input.PostalCode">Postal Code</label>
                                    <span asp-validation-for="Input.PostalCode" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6 fade-input">
                                <div class="form-floating">
                                    <input asp-for="Input.Email" class="form-control" autocomplete="username" placeholder="name@example.com" />
                                    <label asp-for="Input.Email">Email</label>
                                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Password & Confirm Password -->
                        <div class="row mb-3">
                            <div class="col-md-6 fade-input">
                                <div class="form-floating">
                                    <input asp-for="Input.Password" type="password" class="form-control" autocomplete="new-password" placeholder="Password" />
                                    <label asp-for="Input.Password">Password</label>
                                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6 fade-input">
                                <div class="form-floating">
                                    <input asp-for="Input.ConfirmPassword" type="password" class="form-control" autocomplete="new-password" placeholder="Confirm Password" />
                                    <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        @if (User.IsInRole(SD.AdminRole))
                        {
                            <!-- Role Dropdown -->
                            <div class="form-floating mb-4 fade-input">
                                <select asp-for="Input.Role" asp-items="@Model.Input.RoleList" class="form-select">
                                    <option disabled selected>Select Role</option>
                                </select>
                                <label asp-for="Input.Role">Role</label>
                            </div>

                            <!-- Company Dropdown -->
                            <div id="companyDiv" class="form-floating mb-4 fade-input" style="display:none;">
                                <select asp-for="Input.CompanyId" asp-items="@Model.Input.CompanyList" class="form-select">
                                    <option disabled selected>Select Company</option>
                                </select>
                                <label asp-for="Input.CompanyId">Company</label>
                            </div>
                        }
                        
                        <!-- Submit Button -->
                        <button type="submit" class="btn btn-modern w-100 mb-3">Register</button>

                        <!-- Login Link -->
                        <div class="text-center text-muted">
                            Already have an account? <a asp-page="./Login">Login here</a>
                        </div>
                    </form>
                </div>

                <!-- External Login -->
                @if ((Model.ExternalLogins?.Count ?? 0) > 0)
                {
                    <div class="card-footer text-center py-4">
                        <h6 class="text-muted mb-3">Or sign up using:</h6>
                        @foreach (var provider in Model.ExternalLogins!)
                        {
                            <form asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="d-inline">
                                <button type="submit" class="btn btn-outline-primary mx-1" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">
                                    @provider.DisplayName
                                </button>
                            </form>
                        }
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function () {
            // عند تغيير الدور
            $('#Input_Role').change(function () {
                var selectedRole = $(this).val();

                if (selectedRole === 'Company') { // ضع القيمة الدقيقة للـ Role الخاص بالشركة
                    $('#companyDiv').slideDown(); // إظهار الديف تدريجياً
                } else {
                    $('#companyDiv').slideUp(); // إخفاء الديف تدريجياً
                    $('#Input_CompanyId').val(''); // إعادة تعيين قيمة select
                }
            });

            // تحقق من القيمة الافتراضية عند تحميل الصفحة
            if ($('#Input_Role').val() === 'Company') {
                $('#companyDiv').show();
            }
        });
    </script>
}
