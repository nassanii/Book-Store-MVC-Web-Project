@model int

@{
    ViewData["Title"] = "Order Confirmation";
}

<style>
    /* Animation for the check icon */
    @@keyframes bounce {
        0%, 20%, 50%, 80%, 100%

    {
        transform: translateY(0);
    }

    40% {
        transform: translateY(-15px);
    }

    60% {
        transform: translateY(-8px);
    }

    }

    .check-icon {
        animation: bounce 1s ease;
    }

    /* Button hover effect - slower and lighter */
    .btn-gradient {
        transition: all 0.6s ease; /* slower transition */
    }

        .btn-gradient:hover {
            background: linear-gradient(135deg, #5CBF67, #2E7D32); /* slightly lighter */
            transform: scale(1.02); /* smaller scale */
            box-shadow: 0 4px 10px rgba(0,0,0,0.2); /* lighter shadow */
        }
</style>

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">

            <div class="card shadow-lg border-0 rounded-4 text-center p-4" style="background: #f9f9f9;">

                <!-- Success Icon -->
                <div class="mb-4">
                    <svg xmlns="http://www.w3.org/2000/svg" width="70" height="70" fill="#4CAF50" class="check-icon" viewBox="0 0 16 16">
                        <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM6.97 11.03a.75.75 0 0 0 1.07 0l3.992-3.993a.75.75 0 0 0-1.06-1.06L7.5 9.439 5.573 7.51a.75.75 0 0 0-1.06 1.06l2.457 2.46z" />
                    </svg>
                </div>

                <h2 class="fw-bold text-success mb-3">Your order was placed successfully!</h2>
                <p class="text-muted mb-4">Thank you for shopping with us. Your order number is:</p>

                <h4 class="fw-bold text-primary mb-4">#@Model</h4>

                <p class="mb-4 text-secondary">
                    A confirmation email has been sent to you with the details of your purchase.
                </p>

                <a href="/" class="btn btn-sm btn-gradient rounded-pill px-4" style="background: linear-gradient(135deg, #4CAF50, #388E3C); color: white;">
                    Back to Home
                </a>

            </div>

        </div>
    </div>
</div>
